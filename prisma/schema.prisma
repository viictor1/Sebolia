generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Livro {
  id         Int        @id @default(autoincrement())
  titulo     String
  autor      String
  editora    String
  ano        Int
  Exemplares Exemplar[]
}

model Exemplar {
  Livro   Livro  @relation(fields: [livroId], references: [id])
  estado  String
  livroId Int
  preco   Float

  @@id([livroId, estado])
}

model Cliente {
  id      Int    @id @default(autoincrement())
  usuario String @unique
  senha   String
  celular String
}
